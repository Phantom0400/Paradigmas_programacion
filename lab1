{R} <- Replace (es para sobreescribir)
{esc} <- para salir del modo escritura
{i} <- insert (escribir insertando)
{x} <- borrar
{dd} <- borrar renglón completo
{:"número"} <- ir a la línea enésima
{:$} <- ir a la última línea
{/"palabra"} <- Busqueda de una palabra en partícular
{/"palabra" n} <- Busqueda de la siguiente palabra repetida
{:w} <- Guardad el archivo
{:wq} <- sale y guarda los cambios del archivo
{:q!} <- sale del archivo sin guardar
